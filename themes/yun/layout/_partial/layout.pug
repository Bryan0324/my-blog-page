- var title = (__('title') !== 'title' && __('title')) || config.title
- var author = config.author + (config.email ? ',' + config.email : '')
- var copyright = config.copyright || config.author

doctype html
html(lang=config.language, class=theme.mode === 'dark' ? 'dark' : (theme.mode === 'sunset' ? 'sunset' : ''))
  head
    meta(charset='UTF-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name='theme-color', content=theme.colors.primary)
    meta(name='author' content=author)
    meta(name="copyright" content=copyright)
    !=meta_generator()
    meta(name='theme' content="hexo-theme-yun")
    - page_title(page)
    if page.title
      title=page.title + ' | ' + title
    else
      title=title
    include ../_third-party/cdn.pug
    include head.pug
    include extended.pug
    block preconnect
    //- Mode handler for multi-mode support (light/dark/sunset)
    script(src=url_for('/js/ui/mode-handler.js'))
    script.
      (function() {
        const hour = new Date().getHours()
        const saved = localStorage.getItem('darken-mode')
        
        // If user has manually set a mode, respect it
        if (saved && saved !== 'auto') {
          if (saved === 'dark' || saved === 'sunset') {
            document.documentElement.classList.add(saved)
          }
          return
        }
        
        // Handle time mode with sunset (17:00-20:00 sunset, 20:00-07:00 dark, 07:00-17:00 light)
        if (CONFIG.mode === 'time') {
          if (hour >= 17 && hour < 20) {
            document.documentElement.classList.add('sunset')
          } else if (hour >= 20 || hour < 7) {
            document.documentElement.classList.add('dark')
          }
          return
        }
        
        // Handle auto mode (system preference)
        if (CONFIG.mode === 'auto') {
          const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches
          const setting = localStorage.getItem('darken-mode') || 'auto'
          if (setting === 'dark' || (prefersDark && setting !== 'light'))
            document.documentElement.classList.toggle('dark', true)
        }
      })()
  body(class= is_home() ? 'is-home' : '')
    //- global
    include ../_mixin/index.pug
    
    if page.iconify || theme.iconify.global
      include ../_third-party/iconify.pug

    //- background
    include background.pug
    .container
      include sidebar.pug
      main#content.sidebar-translate
        block content

        if is_post() || is_page()
          if page.comments && theme.comment.enable
            include ../_third-party/comments/index.pug

      include footer.pug
    
    //- widget
    include ../_widget/index.pug
    //- load at last
    if theme.medium_zoom
      include ../_third-party/medium-zoom.pug
