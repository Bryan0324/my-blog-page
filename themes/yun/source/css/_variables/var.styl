@import './_code.styl';

$bg-color = convert(hexo-config('colors.bg'));

:root {
  --hty-mode: 'light';
  --hty-bg-color: $bg-color;
  --hty-text-color: #333333;
  --hty-secondary-text-color: #555555;
  --post-block-bg-color: white;
  // star-markdown-css
  --smc-link-color: $colors.primary;
  // yun
  --yun-bg-image: url(hexo-config('bg_image.url'));
  // banner
  --banner-line-color: black;
  --banner-char-color: black;
}

$dark-primary-color = convert(hexo-config('colors.dark.block'));

html.dark {
  --hty-mode: 'dark';
  --hty-bg-color: #303030;
  --hty-text-color: #f2f2f2;
  --hty-secondary-text-color: #eeeeee;
  --post-block-bg-color: convert(hexo-config('colors.dark.block'));
  // star-markdown-css
  --smc-link-color: lighten($colors.primary, 30%);
  // yun
  --yun-bg-image: url(hexo-config('bg_image.dark'));
  // banner
  --banner-line-color: white;
  --banner-char-color: white;
  --banner-char-bg-color: rgba(black, 0.5);
  --banner-char-hover-color: black;
  // post-card
  --post-card-bg-color: rgba($dark-primary-color, hexo-config('post_card.opacity'));
  --post-card-shadow: 0 1px 8px rgba($dark-primary-color, 0.1);
  // sidebar
  --sidebar-bg-color: rgba(convert(hexo-config('colors.dark.block')), 0.95);
  --sidebar-bg-image: url(hexo-config('sidebar.dark_bg_image'));
  // pagination
  --page-btn-bg-color: rgba(black, 0.5);
  --page-btn-hover-bg-color: rgba(lighten($colors.primary, 80%), 0.9);
  --page-btn-active-bg-color: $colors.primary;
}

// Sunset mode (warm evening palette)
html.sunset {
  --hty-mode: 'sunset';
  --hty-bg-color: convert(hexo-config('colors.sunset.bg')) || #FFF5E6;
  --hty-text-color: convert(hexo-config('colors.sunset.text')) || #8B4513;
  --hty-secondary-text-color: #A0522D;
  --post-block-bg-color: convert(hexo-config('colors.sunset.block')) || #FFE8D6;
  // star-markdown-css
  --smc-link-color: convert(hexo-config('colors.sunset.link')) || #FF8E53;
  // yun
  --yun-bg-image: url(hexo-config('bg_image.sunset'));
  // banner
  --banner-line-color: convert(hexo-config('colors.sunset.banner')) || #FF6B35;
  --banner-char-color: convert(hexo-config('colors.sunset.banner')) || #FF6B35;
  --banner-char-bg-color: rgba(#FFF5E6, 0.3);
  --banner-char-hover-color: #FF8E53;
  // post-card
  --post-card-bg-color: rgba(#FFE8D6, hexo-config('post_card.opacity') || 0.9);
  --post-card-shadow: 0 1px 8px rgba(#FF8E53, 0.2);
  // sidebar
  --sidebar-bg-color: rgba(#FFE8D6, 0.95);
  --sidebar-bg-image: url(hexo-config('sidebar.sunset_bg_image'));
  // pagination
  --page-btn-bg-color: rgba(#FF8E53, 0.3);
  --page-btn-hover-bg-color: rgba(#FF8E53, 0.7);
  --page-btn-active-bg-color: #FF6B35;
}

// Midnight mode (deep night palette)
html.midnight {
  --hty-mode: 'midnight';
  --hty-bg-color: #0a0e27;
  --hty-text-color: #b8c5d6;
  --hty-secondary-text-color: #8a9bb5;
  --post-block-bg-color: #141b2d;
  // star-markdown-css
  --smc-link-color: #6b9bd1;
  // yun
  --yun-bg-image: url(hexo-config('bg_image.midnight'));
  // banner
  --banner-line-color: #6b9bd1;
  --banner-char-color: #6b9bd1;
  --banner-char-bg-color: rgba(#0a0e27, 0.7);
  --banner-char-hover-color: #89b4f8;
  // post-card
  --post-card-bg-color: rgba(#141b2d, hexo-config('post_card.opacity') || 0.9);
  --post-card-shadow: 0 1px 8px rgba(#0a0e27, 0.3);
  // sidebar
  --sidebar-bg-color: rgba(#141b2d, 0.95);
  --sidebar-bg-image: url(hexo-config('sidebar.midnight_bg_image'));
  // pagination
  --page-btn-bg-color: rgba(#1a2332, 0.8);
  --page-btn-hover-bg-color: rgba(#6b9bd1, 0.5);
  --page-btn-active-bg-color: #6b9bd1;
}
